//Tabema
.tabema
	width: 100%
	height 150px
	@media screen and (max-width: 768px)
		width: 100%
	hr 
		width: 90%
		background: black
		margin-top: -1.1%
	.container-fluid
		.row
			width: 100%
			height 150px
			.col-4
				@media screen and (max-width: 414px)
						display none
				.input-group
					margin-top: 8%
					margin-left: 15%
					input 
						width: 60%
						height 55px
						border none
						background: #f3f3f3		
					.input-group-append
						button 
							margin-top: 0px
							height 55px
							border-left: none
							border-radius: 0 3px 3px 0
							background: #f3f3f3
			.col-sm-4
				img
					margin-left: 30%
					margin-top: 8%
			.col-md-4
				@media screen and (max-width: 414px)
						display none
				padding-left: 15%
				margin-top: 3%
				a
					text-decoration none
					p.tabema1
						float: left
						width: 60px
						height 60px
						background #f3f3f3
						border-radius 50%
						i
							margin-top: 16px
							margin-left: 10px
							color black
					p.tabema2
						float left
						margin-top: 19px
						margin-left: 5px
						font-weight: 600
						color black
						@media screen and (max-width: 768px)
							display none
					&:hover p.tabema1
						background: red
						i 
							color white			 
