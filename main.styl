// Computa
.computa 
	width: 100%
	height 500px
	background: gray
	@media screen and (max-width: 768px)
		width: 768px
	@media screen and (max-width: 414px)
		width: 414px
		height 300px
	.carousel
		@media screen and (max-width: 414px)
			height 300px
		ol 
			li
				width: 10px
		.carousel-inner
			.carousel-item
				@media screen and (max-width: 414px)
					height 300px
				img
					width: 100%
					height 500px
					@media screen and (max-width: 414px)
						width: 100%
						height  300px
				.card-img-overlay
					a
						text-decoration none
						color white
						h1.hesam1
							margin-top: 10%
							transition 2s
							&:hover
								font-size: 60px
								color #b22af1
							@media screen and (max-width: 414px)
								display none	
						h1.hesam2
							width: 40%
							margin-left: 30%
							font-weight: bold
							border 2px solid white
							transition 0.1s
							&:hover
								border 2px solid red
							@media screen and (max-width: 414px)
								width: 80%
								margin-left: 10%
					button 
						width: 10%
						margin-left: 45%
						font-weight: bold
						background: white
						transition: 2s
						@media screen and (max-width: 1024px)
							width: 20%
							margin-left: 40%
						@media screen and (max-width: 414px)
							width: 30%
							margin-left: 35%
							display none
						&:hover
							background: #3d3333
							color white
