// Ichi
.ichi
	margin-top: 1px
	width: 100%
	height 62px
	background-color:rgba(255,255,255,0.9)
	@media screen and (max-width: 768px)
		width: 100%
	.navbar
		@media screen and (max-width: 768px)
			width: 100%
		.collapse
			margin-top: -0.7%
			ul.navbar-nav
				padding-left: 20%
				@media screen and (max-width: 1024px)
					padding-left: 12%
				p 
					width: 1px 
					height 40px
					background gray
					margin 10px 1px 0 1px
				li.box1q1
					height 60px
					width: 120px
					transition 2s
					&:hover
						background: black
					&:hover .dropdown a 
						color white
					.dropdown:hover .dropdown-menu
						display: block
					.dropdown .dropdown-toggle:active
						pointer-events: none
					.dropdown
						a 
							padding-top: 18px
							color black
						.dropdown-menu
							margin-top: 6%
							width: 300px
							height: auto
							border-radius: none
							.input-group
								a 
									margin-top: -5%
									color black				
